# IndexedDB Configuration
IDB_NAME=ryzer_wallet
IDB_VERSION=1

# RPC Endpoints
ETH_MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
ETH_GOERLI_RPC_URL=https://goerli.infura.io/v3/your_infura_key
POLYGON_MAINNET_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# HSM Configuration
HSM_PIN=your_hsm_pin
HSM_LIBRARY_PATH=/path/to/hsm/library
HSM_SLOT_ID=0

# JWT Secret
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Application Settings
BACKEND_PORT=3000
ADMIN_PORT=3001
USER_PORT=3002
NODE_ENV=development
LOG_LEVEL=info
TENANT_ID=default

# Security Settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Analytics
ANALYTICS_ENABLED=true

# Cross-chain Bridge Settings
BRIDGE_API_KEY=your_bridge_api_key

# Frontend Settings
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WALLET_NAME=Ryzer Wallet
NEXT_PUBLIC_THEME=system
NEXT_PUBLIC_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_SECONDARY_COLOR=#10b981
NEXT_PUBLIC_ACCENT_COLOR=#8b5cf6

# UI Animation Settings
NEXT_PUBLIC_ANIMATIONS_ENABLED=true
NEXT_PUBLIC_GLASSMORPHISM_ENABLED=true
NEXT_PUBLIC_MOTION_REDUCE=false

# Feature Flags
NEXT_PUBLIC_FEATURE_MULTISIG=true
NEXT_PUBLIC_FEATURE_CROSSCHAIN=true
NEXT_PUBLIC_FEATURE_RECOVERY=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
